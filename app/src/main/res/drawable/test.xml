<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                    android:width="1dp"
                    android:color="@color/colorAccent"/>

            <corners android:radius="50dp" android:state_checked="true"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke
                    android:width="@dimen/dialog_bg_normal_radius"
                    android:color="@color/colorAccent"/>
            <corners android:radius="50dp" android:state_checked="false"/>
        </shape>
    </item>
</selector>
